{
  "settings" : {
        "index" : {
            "number_of_shards" : 5,
            "number_of_replicas" : 1
        },
    "index.mapper.dynamic":false,
//    "index.store.type": "mmapfs",
//    "indices.memory.index_buffer_size": 30%,
//    "index.translog.flush_threshold_ops": 50000,
//    "refresh_interval": 60s
  },
  "mappings": {
    "tweet": {
      "dynamic": false,
      "properties": {
        "bounding_box": {
          "type": "geo_shape",
          "tree": "quadtree",
          "precision": "1m",
          "coerce": true,
          "ignore_malformed": true
        },
        "city": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "coords": {
          "type": "geo_point"
        },
        "country": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "created_at_datetime": {
          "type": "date"
        },
        "created_at_day": {
          "type": "integer"
        },
        "hashtags": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "id": {
          "type": "long"
        },
        "id_str": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "img_flag": {
          "type": "boolean"
        },
        "img_categories": {
          "dynamic": true,
          "type": "nested"
        },
        "lang": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "media_url": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "text": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "text_categories": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "timestamp_ms": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "username": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        }
      }
    }
  }
}